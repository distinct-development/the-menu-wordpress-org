{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "preferredVersions": {
        "php": "8.1",
        "wp": "latest"
    },
    "features": {
        "networking": true
    },
    "phpExtensionBundles": [
        "kitchen-sink"
    ],
    "landingPage": "/wp-admin/admin.php?page=the-menu",
    "steps": [
        {
            "step": "login",
            "username": "admin",
            "password": "password"
        },
        {
            "step": "installPlugin",
            "pluginData": {
                "resource": "wordpress.org/plugins",
                "slug": "the-menu"
            },
            "options": {
                "activate": true
            }
        },
        {
            "step": "importWxr",
            "file": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/distinct-development/the-menu-wordpress-org/refs/heads/main/blueprint-content.xml"
            }
        },
        {
            "step": "setSiteOptions",
            "options": {
                "blogname": "The Menu: Demo",
                "users_can_register": "0",
                "admin_email": "dev@test.local",
                "permalink_structure": "/%postname%/",
                "template": "twentytwentyfour",
                "stylesheet": "twentytwentyfour"
            }
        }
    ]
}